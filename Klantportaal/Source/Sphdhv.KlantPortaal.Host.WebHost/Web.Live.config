<?xml version="1.0" encoding="utf-8"?>

<!-- For more information on using web.config transformation visit http://go.microsoft.com/fwlink/?LinkId=125889 -->

<configuration xmlns:xdt="http://schemas.microsoft.com/XML-Document-Transform">
  <system.web>
    <compilation xdt:Transform="RemoveAttributes(debug)" />
    <!--
      In the example below, the "Replace" transform will replace the entire 
      <customErrors> section of your web.config file.
      Note that because there is only one customErrors section under the 
      <system.web> node, there is no need to use the "xdt:Locator" attribute.
      
      <customErrors defaultRedirect="GenericError.htm"
        mode="RemoteOnly" xdt:Transform="Replace">
        <error statusCode="500" redirect="InternalError.htm"/>
      </customErrors>
    -->
  </system.web>
  <system.serviceModel>
    <behaviors>
      <serviceBehaviors>
        <behavior>
          <serviceCredentials>
            <serviceCertificate findValue="Sphdhv.KlantPortaal.WebHost PROD" xdt:Transform="SetAttributes" />
          </serviceCredentials>
        </behavior>
      </serviceBehaviors>
    </behaviors>
  </system.serviceModel>

  <system.webServer>
    <httpProtocol>
      <customHeaders>
        <add name="Content-Security-Policy"
             xdt:Transform="SetAttributes" xdt:Locator="Match(name)"
             value="report-to csp-endpoint; report-uri https://icatt.report-uri.com/r/d/csp/enforce ;default-src 'none';frame-ancestors 'self'  https://klantportaal.pensioenfondshaskoningdhv.nl 'self';frame-src 'self' https://gettingstarted.2sxc.org https://2sxc.org/ ;connect-src 'self' https://klantportaal.pensioenfondshaskoningdhv.nl; script-src 'unsafe-inline' 'unsafe-eval' 'self' https://cdn.jsdelivr.net https://cdn.tinymce.com  https://js.icatt-services.nl https://www.google-analytics.com  https://www.googletagmanager.com https://klantportaal.pensioenfondshaskoningdhv.nl  https://cdn.icatt-services.nl ;font-src 'self' data: https://maxcdn.bootstrapcdn.com https://fonts.googleapis.com https://fonts.gstatic.com https://fonts.gstatic.com https://cdn.tinymce.com ; style-src 'self' 'unsafe-inline' https://maxcdn.bootstrapcdn.com https://cdn.icatt-services.nl https://fonts.googleapis.com  https://cdn.tinymce.com; img-src 'self' data: https://www.google-analytics.com ;form-action https://digid.nl/saml/idp/request_authentication https://digid.nl/inloggen 'self';base-uri 'none'; " />
        <add xdt:Transform="Insert"
             name="Strict-Transport-Security" value="max-age=31536000" />
      </customHeaders>
    </httpProtocol>

    <security xdt:Transform="Insert">
      <authentication>      
        <windowsAuthentication enabled="false" />
      </authentication>
    </security>

  </system.webServer>
  
</configuration>